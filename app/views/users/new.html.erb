<!-- app/views/users/new.html.erb -->

<h1>ユーザー登録</h1>

<%= form_with  url: users_path, method: :post do |f| %>
  <div>
    <%= f.label :student_no, "学籍番号" %><br>
    <%= f.text_field :student_no %>
  </div>

  <div>
    <%= f.label :name, "氏名" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :role, "ロール" %><br>
    <%= f.select :role, options_for_select([["一般利用者", "user"], ["司書／管理者", "librarian"], ["システム管理者", "admin"]]) %>
  </div>

  <div>
    <%= f.label :password, "パスワード" %><br>
    <%= f.password_field :password %>
  </div>

  <div>
    <%= f.submit "登録" %>
  </div>
<% end %>

<%= link_to "ログイン画面に戻る", login_path %>

<p>
<%= link_to 'ホームに戻る', books_path %>
</p>
